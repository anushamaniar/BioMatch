<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_biometric_r"
    android:layout_width="match_parent"
    android:layout_height="812dp"
    android:background="@drawable/container_biometric_r">

    <ImageView
        android:id="@+id/image_biometric"
        android:layout_width="329dp"
        android:layout_height="263dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="207dp"
        android:layout_gravity="top|left"
        android:scaleType="centerInside"
        android:src="@drawable/image_biometric" />

    <FrameLayout
        android:id="@+id/container_back"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="47dp"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/image_back_arrow"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:scaleType="centerInside"
            android:src="@drawable/image_back_arrow" />
    </FrameLayout>

    <TextView
        android:id="@+id/container_text"
        android:layout_width="372dp"
        android:layout_height="85dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="113dp"
        android:layout_gravity="top|left"
        android:gravity="center_horizontal|top"
        android:includeFontPadding="false"
        android:lineHeight="30dp"
        android:text="Place your left hand at a \nreading distance from the camera "
        android:textColor="#FF1E232C"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/text_right_hand"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="472dp"
        android:layout_gravity="top|left"
        android:gravity="center_horizontal|top"
        android:includeFontPadding="false"
        android:lineHeight="31.68dp"
        android:text="Right Hand"
        android:textColor="#FFFFFFFF"
        android:textSize="15dp" />

    <FrameLayout
        android:id="@+id/container_back_to_login_button"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="714dp"
        android:layout_gravity="top|left"
        android:background="@drawable/container_back_to_login_button">

        <ImageView
            android:id="@+id/image_rectangle2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_rectangle2"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_back_to_home"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="113dp"
            android:layout_marginRight="113dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal|top"
            android:includeFontPadding="false"
            android:lineHeight="31.68dp"
            android:text="Back to Home"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_back_to_login_button1"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="642dp"
        android:layout_gravity="top|left"
        android:background="@drawable/container_back_to_login_button1">

        <ImageView
            android:id="@+id/image_rectangle3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_rectangle3"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_iris"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="153dp"
            android:layout_marginRight="153dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal|top"
            android:includeFontPadding="false"
            android:lineHeight="31.68dp"
            android:text="Iris"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image_rectangle1"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/image_rectangle1"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text_right_hand1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="582dp"
        android:layout_gravity="top|left"
        android:gravity="center_horizontal|top"
        android:includeFontPadding="false"
        android:lineHeight="31.68dp"
        android:text="Right Hand"
        android:textColor="#FFFFFFFF"
        android:textSize="15dp" />
</FrameLayout>
